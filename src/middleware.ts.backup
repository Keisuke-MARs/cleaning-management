import { NextResponse } from "next/server"
import type { NextRequest } from "next/server"

// Basic認証の設定
const BASIC_AUTH_USER = process.env.BASIC_AUTH_USER || "admin"
const BASIC_AUTH_PASSWORD = process.env.BASIC_AUTH_PASSWORD || "password"

export function middleware(request: NextRequest) {
  const { pathname } = request.nextUrl
  const fullUrl = request.url

  console.log(`🚨 ミドルウェア実行`)
  console.log(`📍 pathname: ${pathname}`)
  console.log(`🌐 fullUrl: ${fullUrl}`)
  console.log(`🎯 matcher設定: "/((?!api|_next/static|_next/image|favicon.ico).*)"`)
  console.log(`🔍 pathname === "/instructions/create": ${pathname === "/instructions/create"}`)

  // /instructions/create のみで認証を実行
  if (pathname === "/instructions/create") {
    console.log(`🔐 認証処理を開始します`)
    const authHeader = request.headers.get("authorization")

    if (!authHeader) {
      return new NextResponse("認証が必要です", {
        status: 401,
        headers: {
          "WWW-Authenticate": 'Basic realm="Secure Area"',
        },
      })
    }

    try {
      const authValue = authHeader.split(" ")[1]
      const [user, password] = atob(authValue).split(":")

      if (user !== BASIC_AUTH_USER || password !== BASIC_AUTH_PASSWORD) {
        return new NextResponse("認証が必要です", {
          status: 401,
          headers: {
            "WWW-Authenticate": 'Basic realm="Secure Area"',
          },
        })
      }
    } catch (error) {
      return new NextResponse("認証が必要です", {
        status: 401,
        headers: {
          "WWW-Authenticate": 'Basic realm="Secure Area"',
        },
      })
    }
  } else {
    console.log(`✅ /instructions/create以外なので認証をスキップ`)
  }

  console.log(`⚡ NextResponse.next()を実行`)
  return NextResponse.next()
}

export const config = {
  matcher: [
    "/((?!api|_next/static|_next/image|favicon.ico).*)",
  ],
} 